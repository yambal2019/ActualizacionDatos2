
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2></h2>





<div class="login-wrapper texto">
    <div id="login"
         class="login loginpage col-lg-offset-4 col-lg-4 col-md-offset-3 col-md-6 col-sm-offset-3 col-sm-6 col-xs-offset-2 col-xs-8">
        <h1>
            <a href="#" title="Login Page">

                <img src="~/imagenes/logo.png" height="37" width="187" />

            </a>
        </h1>

        @using (Html.BeginForm("Index", "Datos", FormMethod.Post))
        {

                <p>
                    <label for="user_pass">
                        Ingresa tu DNI:<br />
                        <input type="password" name="pwd" id="user_pass" class="form-control" size="20" />
                    </label>
                </p>
                <p class="forgetmenot">
                    <label class="icheck-label form-label" for="rememberme">
                        <input name="rememberme" type="checkbox" id="rememberme" value="forever" class="skin-square-orange" checked>
                        Acepto los términos y condiciones
                    </label>
                </p>


                <p class="submit">
                    <input type="submit" name="wp-submit" id="wp-submit" class="btn btn-primary btn-border" value="COMENZAR" />
                </p>
          
        }

    </div>
</div>
